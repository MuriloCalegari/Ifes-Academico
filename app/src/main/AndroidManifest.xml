<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="calegari.murilo.sistema_academico">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="calegari.murilo.sistema_academico.MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name="calegari.murilo.sistema_academico.LoginActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name="calegari.murilo.sistema_academico.calendar.EditClassTimeActivity"
            android:label="@string/title_activity_edit_class_time"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="calegari.murilo.sistema_academico.MainActivity"
            android:hardwareAccelerated="true"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="calegari.murilo.sistema_academico.AboutActivity"
            android:label="@string/aboutActivityName"
            android:theme="@style/AppTheme.NoActionBar">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="calegari.murilo.sistema_academico.MainActivity" />
        </activity>
        <activity
            android:name="calegari.murilo.sistema_academico.settings.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="calegari.murilo.sistema_academico.SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="calegari.murilo.sistema_academico.subjects.NewSubjectActivity"
            android:label="@string/title_activity_new_subject"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="calegari.murilo.sistema_academico.subjects.EditSubjectActivity"
            android:label="@string/title_activity_edit_subject"
            android:theme="@style/AppTheme.NoActionBar" />

        <activity
            android:name="calegari.murilo.sistema_academico.subjectgrades.EditSubjectGradeActivity"
            android:label="@string/title_activity_edit_subject_grade"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="calegari.murilo.sistema_academico.subjectgrades.NewSubjectGradeActivity"
            android:label="@string/title_activity_new_subject_grade"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name="calegari.murilo.sistema_academico.BaseFragmentActivity"
            android:theme="@style/PullCollapsibleTheme" />
        <activity
            android:name="calegari.murilo.sistema_academico.calendar.NewClassTimeActivity"
            android:label="@string/title_activity_new_subject_schedule"
            android:theme="@style/AppTheme.NoActionBar" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>